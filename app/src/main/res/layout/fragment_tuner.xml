<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maitr.pitchtracker.Tuner">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/s1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"

            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="E"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/s2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/s1"
            android:layout_alignBottom="@+id/s1"
            android:layout_toEndOf="@+id/s1"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="E"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/s3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/s2"
            android:layout_alignBottom="@+id/s2"
            android:layout_toEndOf="@+id/s2"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="E"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/s4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/s3"
            android:layout_alignBottom="@+id/s3"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="E"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/s5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/s4"
            android:layout_alignBottom="@+id/s4"
            android:layout_toEndOf="@+id/s4"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="E"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/s6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/s5"
            android:layout_alignBottom="@+id/s5"
            android:layout_toEndOf="@+id/s5"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="E"
            android:textAlignment="center"
            android:textSize="36sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circular_textview_drawable"
        android:paddingVertical="80dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

</RelativeLayout>
